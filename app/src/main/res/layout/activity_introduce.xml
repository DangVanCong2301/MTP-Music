<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.IntroduceActivity"
    android:background="@color/primaryColor"
    android:padding="20dp">

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/media_player_logo"
        android:layout_marginTop="40dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/img_icon"
        android:textColor="@color/titleColor"
        android:textSize="16sp"
        android:text="Chào mừng đến với Media Player"/>
    <Button
        android:id="@+id/btn_login_main_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_skip"
        android:textColor="@color/white"
        android:background="@drawable/shape_button01"
        android:text="Đăng nhập"/>

    <Button
        android:id="@+id/btn_skip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_button02"
        android:text="Tiếp tục mà không cần đăng nhập"
        android:textColor="@color/textColor" />

</RelativeLayout>