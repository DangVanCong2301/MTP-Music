<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddStudentActivity">

    <TextView
        android:id="@+id/edt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm sinh viên"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edr_student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_student_birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Birthday"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/edr_student_name"
        app:layout_constraintStart_toStartOf="@id/edr_student_name"
        app:layout_constraintTop_toBottomOf="@+id/edr_student_name" />

    <EditText
        android:id="@+id/edt_student_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/edt_student_birth"
        app:layout_constraintStart_toStartOf="@+id/edt_student_birth"
        app:layout_constraintTop_toBottomOf="@+id/edt_student_birth" />

    <EditText
        android:id="@+id/edt_student_avg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="average"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/edt_student_email"
        app:layout_constraintStart_toStartOf="@+id/edt_student_email"
        app:layout_constraintTop_toBottomOf="@id/edt_student_email" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Thêm"
        app:layout_constraintEnd_toEndOf="@id/edt_student_avg"
        app:layout_constraintStart_toStartOf="@id/edt_student_avg"
        app:layout_constraintTop_toBottomOf="@+id/edt_student_avg" />
</androidx.constraintlayout.widget.ConstraintLayout>