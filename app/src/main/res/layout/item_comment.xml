<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="1dp"
    app:cardBackgroundColor="@color/secondColor"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp"
    app:contentPadding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_profile_comment"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/anh_dai_dien"
            android:layout_marginEnd="8dp"
            app:strokeWidth="1dp"
            app:shapeAppearanceOverlay="@style/roundedImageRounded"/>

        <TextView
            android:id="@+id/tv_account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_account_name"
            android:textColor="@color/titleColor"
            android:textStyle="bold"
            android:layout_toEndOf="@id/img_profile_comment"/>

        <TextView
            android:id="@+id/tv_date_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@color/textColor"
            android:text="23/01/2024"
            android:layout_marginTop="5dp"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_profile_comment"
            android:layout_below="@id/tv_account_name"
            android:textColor="@color/textColor"
            android:text="Bài hát rất cảm xúc, đưa tôi đến với âm nhạc"
            android:textSize="12sp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>